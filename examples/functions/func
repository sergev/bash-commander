func()
{
	local status=0

	if [ $# -eq 0 ] ; then
		echo "usage: func name [name...]" 1>&2
		return 1
	fi

	for f
	do
		if [ "$(builtin type -type $f)" != "function" ] ; then
			echo "func: $f: not a function" 1>&2
			status=1	# one failed
			continue
		fi
		builtin type $f | sed 1d
	done
	return $status
}
